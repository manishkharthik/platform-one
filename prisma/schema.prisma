generator client {
  provider   = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String       @id @default(uuid())
  name          String
  email         String       @unique
  password      String?
  role          UserRole
  tier          LoyaltyTier?
  createdAt     DateTime     @default(now())
  bookings      Booking[]
  eventsCreated Event[]      @relation("CreatedEvents")
}

model Event {
  id                  String      @id @default(uuid())
  name                String
  start               DateTime
  end                 DateTime
  location            String
  minTier             LoyaltyTier
  createdAt           DateTime    @default(now())
  createdById         String
  participantCapacity Int         @default(25)
  volunteerCapacity   Int         @default(5)
  bookings            Booking[]
  createdBy           User        @relation("CreatedEvents", fields: [createdById], references: [id])
  questions           Question[]
}

model Question {
  id         String             @id @default(uuid())
  text       String
  type       QuestionType
  options    String[]
  targetRole QuestionTargetRole
  eventId    String
  answers    Answer[]
  event      Event              @relation(fields: [eventId], references: [id], onDelete: Cascade)
}

model Booking {
  id            String                 @id @default(uuid())
  createdAt     DateTime               @default(now())
  roleAtBooking BookingRole
  userId        String
  eventId       String
  answers       Answer[]
  event         Event                  @relation(fields: [eventId], references: [id], onDelete: Cascade)
  user          User                   @relation(fields: [userId], references: [id])
  confirmations ReminderConfirmation[]

  @@unique([userId, eventId])
}

model ReminderConfirmation {
  id          String             @id @default(uuid())
  token       String             @unique
  status      ConfirmationStatus @default(PENDING)
  bookingId   String
  sentAt      DateTime           @default(now())
  respondedAt DateTime?
  booking     Booking            @relation(fields: [bookingId], references: [id], onDelete: Cascade)

  @@index([token])
}

model Answer {
  id         String   @id @default(uuid())
  value      String
  bookingId  String
  questionId String
  booking    Booking  @relation(fields: [bookingId], references: [id], onDelete: Cascade)
  question   Question @relation(fields: [questionId], references: [id], onDelete: Cascade)

  @@unique([bookingId, questionId])
}

enum ConfirmationStatus {
  PENDING
  CONFIRMED
  DECLINED
}

enum UserRole {
  PARTICIPANT
  VOLUNTEER
  STAFF
}

enum BookingRole {
  PARTICIPANT
  VOLUNTEER
}

enum QuestionTargetRole {
  PARTICIPANT
  VOLUNTEER
}

enum QuestionType {
  TEXT
  SELECT
  MULTISELECT
}

enum LoyaltyTier {
  BRONZE
  SILVER
  GOLD
  PLATINUM
}
